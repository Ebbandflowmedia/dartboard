<%= simple_form_for @transaction, :html => {:"data-abide" => ''} do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

  	<h1><%= @transaction.account.owner %></h1>
 	
  	<%= f.input :amount, :input_html => {:required => ""} %>
  	<%= f.input :name, label: "Description", :input_html => {:required => ""} %>
  	
  </div>

  <div class="form-actions">
    <%= f.button :submit, label: "Save Transaction", class: "success" %>
    <%= link_to 'Cancel', @transaction, method: :delete, data: { confirm: 'Are you sure?' }, :class => "button warning small" %>
  </div>
<% end %>
